<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PSE Payments</title>
</head>
<body>
    <div class="details-content">
        <table id="table-pse-payments" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>PSE Ref.</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                <% if (psePayments.results.length > 0) { %>
                    <% psePayments.results.forEach(psePayment => { %>
                        <tr>
                            <td><%= psePayment._id %></td>
                            <td><%= psePayment.pseuserEmail %></td>
                            <td><%= psePayment.psereferencePse %></td>
                            <td>
                                <form action="/details/psedetail/<%= psePayment._id %>">
                                    <input class="button" type="submit" value="Details" />
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4">There are no PSE payments to display...</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
