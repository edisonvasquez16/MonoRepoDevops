<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cash Payments</title>
</head>
<body>
    <div class="details-content">
        <table id="table-cash-payments">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Amount</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                <% if (cashPayments.results.length > 0) { %>
                    <% cashPayments.results.forEach(cashPayment => { %>
                        <tr>
                            <td><%= cashPayment._id %></td>
                            <td><%= cashPayment.cashuserEmail %></td>
                            <td>$ <%= cashPayment.cashamount %></td>
                            <td>
                                <form action="/details/cashdetail/<%= cashPayment._id %>">
                                    <button class="button" type="submit">Details</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4">There are no cash payments to display...</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
