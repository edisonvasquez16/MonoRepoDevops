pipeline {
    agent any

    environment {
        SONARQUBE_SERVER = 'SonarQubeScanner'
        SCANNER = 'SonarQube Scanner2'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: "main",
                url: 'https://github.com/edisonvasquez16/MonoRepoDevops.git'
            }
        }
        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool name: "${env.SCANNER}", type: 'hudson.plugins.sonar.SonarRunnerInstallation'
                    withSonarQubeEnv("${env.SONARQUBE_SERVER}") {
                        sh """
                        ${scannerHome}/bin/sonar-scanner \
                        -Dsonar.projectKey=DevOps \
                        -Dsonar.sources=. \
                        -X
                        """
                    }
                }
            }
        }
    }
}
